{
  "name": "nextn",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "dev:emulators": "firebase emulators:start --only auth,firestore,functions,storage",
    "dev:full": "npm run dev:emulators & npm run dev",
    "genkit:dev": "genkit start -- tsx src/ai/dev.ts",
    "genkit:watch": "genkit start -- tsx --watch src/ai/dev.ts",
    "build": "next build",
    "build:functions": "cd functions && npm run build",
    "start": "next start && next export",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "firebase:emulators": "firebase emulators:start",
    "firebase:deploy": "npm run build && npm run build:functions && firebase deploy",
    "firebase:deploy:hosting": "npm run build && firebase deploy --only hosting",
    "firebase:deploy:functions": "npm run build:functions && firebase deploy --only functions",
    "firebase:deploy:firestore": "firebase deploy --only firestore",
    "firebase:deploy:dataconnect": "firebase deploy --only dataconnect",
    "dataconnect:generate": "firebase dataconnect:sdk:generate",
    "dataconnect:deploy": "firebase deploy --only dataconnect",
    "setup:env": "cp env.template .env.local",
    "setup:firebase": "firebase login && firebase use --add",
    "setup:all": "npm install && npm run setup:env && npm run setup:firebase && npm run dataconnect:generate",
    "clean": "rm -rf .next out",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json",
    "validate:config": "node scripts/validate-config.js",
    "verify:real-data": "node scripts/verify-config.js",
    "compress-images": "node scripts/compress-images.js",
    "install-sharp": "node scripts/install-sharp.js",
    "optimize:remove-heavy": "node scripts/remove-heavy-dependencies.js",
    "optimize:analyze": "npm run build && npx @next/bundle-analyzer",
    "optimize:images": "node scripts/optimize-images-critical.js",
    "optimize:critical": "npm run optimize:images && npm run build && npm run optimize:analyze"
  },
  "dependencies": {
    "@firebasegen/default-connector": "file:dataconnect-generated/js/default-connector",
    "@genkit-ai/googleai": "^1.8.0",
    "@genkit-ai/next": "^1.8.0",
    "@headlessui/react": "^2.2.4",
    "@hookform/resolvers": "^4.1.3",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@stripe/react-stripe-js": "^3.7.0",
    "@stripe/stripe-js": "^7.4.0",
    "@tabler/icons-react": "^3.34.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "date-fns": "^3.6.0",
    "dotenv": "^16.6.1",
    "firebase": "^11.10.0",
    "firebase-admin": "^13.4.0",
    "genkit": "^1.8.0",
    "lucide-react": "^0.475.0",
    "next": "^15.3.3",
    "patch-package": "^8.0.0",
    "react": "^18.3.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "stripe": "^18.3.0",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "9.31.0",
    "eslint-config-next": "15.4.2",
    "firebase-tools": "^14.11.0",
    "genkit-cli": "^1.8.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "sharp": "^0.33.0"
  }
}
